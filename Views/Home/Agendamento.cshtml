                <input asp-for="animal" class="estilo-input"  size="30" required placeholder="Seu animal">

                <label asp-for="necessidade">Necessidade:</label>

                <textarea asp-for="necessidade" cols="35" rows="8" required
                    placeholder="Informe o tipo de atendimento que seu pet precisa"></textarea>

                <input type="submit" id="form-submit" value="Enviar">

            </form>

        </div>
        <div id="agendamento-img">

            <img src="~/img/fundo2.png" alt="Cachorro">

